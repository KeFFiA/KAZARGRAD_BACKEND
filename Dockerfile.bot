FROM python:3.12-slim

WORKDIR /app

COPY KAZARGRAD_BACKEND/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY KAZARGRAD_BACKEND/DATABASE/ ./DATABASE/
COPY KAZARGRAD_BACKEND/LOGGING_SETTINGS/ ./LOGGING_SETTINGS/
COPY KAZARGRAD_BACKEND/path.py .

COPY KAZARGRAD_BACKEND/BOT/ ./BOT/

CMD ["python", "BOT/START.py"]
